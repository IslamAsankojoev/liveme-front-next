FROM node:16.17 as dependenciesWORKDIR /live_nextCOPY package.json package-lock.json ./RUN npm install --frozen-lockfileFROM node:16.17 as builderWORKDIR /live_nextCOPY . .COPY --from=dependencies /live_next/node_modules ./node_modulesRUN npm run buildFROM node:16.17 as runnerWORKDIR /live_nextENV NODE_ENV productionCOPY --from=builder /live_next/public ./publicCOPY --from=builder /live_next/package.json ./package.jsonCOPY --from=builder /live_next/.next ./.nextCOPY --from=builder /live_next/node_modules ./node_modulesEXPOSE 3000CMD ["npm","run", "start"]